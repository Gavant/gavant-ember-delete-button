<a class="btn btn-sm btn-default remove-button" disabled={{isDisabled}} {{action "confirm"}} data-toggle="popover" data-trigger="focus" title="{{title}}">
    {{#if removing}}
        <div class="loading active"></div>
    {{else}}
        {{text}}
        {{#if icon}}
            <i class="{{icon}}"></i>
        {{/if}}
    {{/if}}
</a>

<div class="delete-confirmation" style="display: none;">
    <div class="confirmation-body">
        {{#if hasBlock}}
            {{yield}}
        {{else}}
            Are you sure you want to delete this item?
        {{/if}}
    </div>
    <div>
        <button class="btn btn-success {{buttonSize}}" {{action "delete"}}>Yes</button>
        <button class="btn btn-danger {{buttonSize}}" {{action "cancel"}}>No</button>
    </div>
</div>
